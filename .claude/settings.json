{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(gh *)",
      "Bash(git *)",
      "Bash(git commit *)",
      "Bash(npm *)",
      "Bash(python *)",
      "Bash(python3 *)",
      "WebFetch"
    ],
    "deny": [
      "Edit(/docs/constitution.md)"
    ]
  },
  "defaultMode": "delegate",
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  }
}
